{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "allowJs": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~": [ "." ],
      "~/*": [ "./*" ],
      "@": [ "." ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
