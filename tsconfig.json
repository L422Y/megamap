{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "types": ["jest"],
    "noEmit": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~": [ "." ],
      "~/*": [ "./*" ],
      "@": [ "." ]
    }
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
